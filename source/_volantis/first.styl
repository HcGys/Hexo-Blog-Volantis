// 调整移动端的显示
#safearea
  @media screen and (max-width: $device-mobile)
    margin: 0 !important
    box-shadow: none
    .body-wrapper
      padding: 0
    #l_main
      padding-left: 0
      article#comments,
      article#friends,
      article#post,
      article#page,
      article#arc      
        border-radius: 0
      article#cat,
      article#tag
        margin: 0
        border-radius: 0
      .post-wrapper
        margin: 0 0 16px
        .post
          border-radius: 0
    #l_side
      .widget.mobile
        border-radius: 0

.iconfont
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor
  overflow: hidden
  &.emoji
    width: 1.5em
    height: 1.5em
    vertical-align: -0.3em

////////////////////////////////////////////////////////////////

// 移动端字体大小
.cover-wrapper .cover-body .title
  @media screen and (max-width: 500px)
    font-size: 2rem

//修复开启首行缩进后的图片，标签
#l_main>article.cus-indent 
  p img
    display: block
  div.checkbox p
    text-indent: 0em

// 修复侧边栏 list 链接处字体粗细问题
.widget.list .content a > div.name 
  font-weight: initial; 

// 首屏灰色
html.grayscale::before {
  content: "";
  position: absolute;
  inset: 0;
  backdrop-filter: grayscale(95%);
  z-index: 5000;
  pointer-events: none;
}


